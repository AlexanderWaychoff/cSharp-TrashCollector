@model TrashCollector.Models.Customer


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Customer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CustomerID)

        <p>Are you going on Vacation?  Check the box to confirm.</p>
        <div class="form-group">
            @Html.LabelFor(model => model.IsOnVacation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsOnVacation)
                    @Html.ValidationMessageFor(model => model.IsOnVacation, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <p>Until when will you be gone?</p>
        <div class="form-group input-group-sm">
            @Html.LabelFor(model => model.DropOffDate)
            @Html.TextBoxFor(model => model.DropOffDate, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })
            @Html.ValidationMessageFor(model => model.DropOffDate)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
